# GeminiLoop RunPod Serverless Dockerfile (Alternative)
# 
# Using standard Python 3.11 image for maximum compatibility

FROM python:3.11-slim

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    DISPLAY=:99

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    git \
    xz-utils \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js 18
RUN curl -fsSL https://nodejs.org/dist/v18.19.0/node-v18.19.0-linux-x64.tar.xz -o node.tar.xz && \
    tar -xJf node.tar.xz -C /usr/local --strip-components=1 && \
    rm node.tar.xz && \
    node --version && \
    npm --version

# Set working directory
WORKDIR /app

# Copy and install Python dependencies
COPY requirements.txt ./
RUN pip install --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy and install Node.js dependencies
COPY package.json ./
RUN npm install --production

# Install Playwright with Chromium
RUN npx playwright install chromium && \
    npx playwright install-deps chromium

# Copy application code
COPY orchestrator/ ./orchestrator/
COPY services/ ./services/
COPY handler.py ./

# Create runs directory
RUN mkdir -p /runpod-volume/runs

# Expose port for preview server
EXPOSE 8080

# Set the handler
CMD ["python", "-u", "handler.py"]
