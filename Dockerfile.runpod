# Dockerfile for RunPod deployment
# BrowserUse MCP server with Playwright

FROM python:3.11-slim

# Install system dependencies for Playwright/Chromium
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        wget \
        gnupg \
        ca-certificates \
        fonts-liberation \
        libnss3 \
        libatk1.0-0 \
        libatk-bridge2.0-0 \
        libcups2 \
        libxkbcommon0 \
        libxcomposite1 \
        libxdamage1 \
        libxrandr2 \
        libgbm1 \
        libpangocairo-1.0-0 \
        libpangofcairo-1.0-0 \
        libpango1.0-0 \
        libxshmfence1 \
        libgtk-3-0 \
        libdrm2 \
        libxcb1 \
        libx11-xcb1 \
        libasound2 \
        xvfb \
        && rm -rf /var/lib/apt/lists/*

# Set workdir
WORKDIR /app

# Copy requirements first for better caching
COPY requirements.txt /app/

# Install Python dependencies
RUN pip install --upgrade pip && \
    pip install playwright && \
    playwright install chromium --with-deps

# Install browser-use (if available) or use Playwright directly
# Note: browser-use may not be available as a pip package, so we use Playwright directly
# RUN pip install browser-use || echo "browser-use not available, using Playwright directly"

# Install project dependencies
RUN pip install -r requirements.txt

# Copy the entire project
COPY . /app

# Expose port for MCP server
EXPOSE 8000

# Default command: run smoke test
# Override with: docker run ... uvicorn qa_browseruse_mcp.server:app --host 0.0.0.0 --port 8000
CMD ["python", "-m", "qa_browseruse_mcp.smoke_test", "--url", "https://example.com", "--base_url", "http://127.0.0.1:8000"]
